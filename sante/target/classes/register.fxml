<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.RegisterController"
            stylesheets="@styles.css"
            styleClass="login-background1"
            prefHeight="600.0" prefWidth="800.0">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="150">
        <Label text="Inscription" style="-fx-font-size: 24px;" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" />
        <Button text="S'inscrire" onAction="#handleRegister" />
    </VBox>
</AnchorPane>
