<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.LoginController"
            stylesheets="@styles.css"
            styleClass="login-background"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Contenu de l'interface -->
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="100" AnchorPane.leftAnchor="150">
        <Label text="Login" style="-fx-font-size: 24px; -fx-text-fill: white;" />
        <TextField fx:id="emailField" promptText="Email" />
        <PasswordField fx:id="passwordField" promptText="Mot de passe" />
        <HBox spacing="10" alignment="CENTER">
            <Button text="Login" onAction="#handleLogin" />
            <Button text="S'inscrire" onAction="#openRegistrationForm" />
        </HBox>
    </VBox>
</AnchorPane>
