<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.AjouterCategorieController"
            stylesheets="@styles.css"
            styleClass="login-background1"
            prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="15" style="-fx-padding: 20;" alignment="CENTER">
        <Label text="Ajouter une Catégorie" style="-fx-font-size: 18px;" />
        <TextField fx:id="categoryNameField" promptText="Nom de la catégorie" />
        <TextField fx:id="categoryDescriptionField" promptText="Description de la catégorie" />
        <Button text="Ajouter" onAction="#handleAddCategory" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>
