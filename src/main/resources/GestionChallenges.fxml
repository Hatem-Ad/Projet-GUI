<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.GestionChallengesController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <Label text="Gestion des Challenges" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- Zone de recherche -->
            <HBox spacing="10">
                <TextField fx:id="txtSearch" promptText="Rechercher par nom..." />
                <Button fx:id="btnSearch" text="Rechercher" />
                <Button fx:id="btnReset" text="Réinitialiser" />
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tableChallenges">
                <columns>
                    <TableColumn fx:id="colId" text="ID" />
                    <TableColumn fx:id="colName" text="Nom" />
                    <TableColumn fx:id="colDescription" text="Description" />
                    <TableColumn fx:id="colCategoryId" text="Catégorie ID" />
                </columns>
            </TableView>

            <!-- Bouton de suppression -->
            <Button fx:id="btnDelete" text="Supprimer le challenge sélectionné" />

            <!-- Formulaire d'ajout -->
            <GridPane hgap="10" vgap="10">
                <Label text="Nom:" />
                <TextField fx:id="txtName" GridPane.columnIndex="1" />
                <Label text="Description:" GridPane.rowIndex="1" />
                <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Catégorie ID:" GridPane.rowIndex="2" />
                <TextField fx:id="txtCategoryId" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnAdd" text="Ajouter" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
